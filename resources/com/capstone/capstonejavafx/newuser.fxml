<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="359.0" prefWidth="364.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.capstone.capstonejavafx.view_controller.NewUserController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox alignment="CENTER" prefHeight="30.0" prefWidth="324.0">
        <children>
            <Label text="New User Name:">
                <padding>
                    <Insets right="20.0" />
                </padding>
            </Label>
            <TextField fx:id="newUserNameTextField" />
        </children>
    </HBox>
    <HBox alignment="CENTER" prefHeight="30.0" prefWidth="324.0">
        <children>
            <Label text="New User Password:">
                <padding>
                    <Insets right="20.0" />
                </padding>
            </Label>
            <PasswordField fx:id="newUserPasswordField" />
        </children>
    </HBox>
    <HBox alignment="CENTER" prefHeight="30.0" prefWidth="324.0">
        <children>
            <Label text="Re-Enter Password:">
                <padding>
                    <Insets right="20.0" />
                </padding>
            </Label>
            <PasswordField fx:id="newUserPasswordField2" />
        </children>
    </HBox>
    <HBox alignment="CENTER" prefHeight="38.0" prefWidth="324.0">
      <children>
         <Button fx:id="newUserSignUpButton" mnemonicParsing="false" onAction="#onClickSignUp" text="Sign Up">
            <HBox.margin>
               <Insets right="20.0" />
            </HBox.margin>
         </Button>
         <Button fx:id="newUserClearButton" mnemonicParsing="false" onAction="#onClickClear" text="Clear">
          <HBox.margin>
              <Insets right="20.0" />
          </HBox.margin>
         </Button>
          <Button fx:id="newUserBackButton" mnemonicParsing="false" onAction="#onClickBack" text="Back" />
      </children></HBox>
   <Label fx:id="newUserErrorLabel" />

</VBox>
