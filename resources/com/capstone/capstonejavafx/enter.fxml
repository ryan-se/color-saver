<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="359.0" prefWidth="364.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.capstone.capstonejavafx.view_controller.EnterController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox alignment="CENTER" prefHeight="30.0" prefWidth="324.0">
      <children>
         <Label text="User Name:">
            <padding>
               <Insets right="20.0" />
            </padding>
         </Label>
         <TextField id="logInUserNameTextField" fx:id="enterUserNameTextField" />
      </children>
   </HBox>
   <HBox alignment="CENTER" prefHeight="30.0" prefWidth="324.0">
      <children>
         <Label text="Password:">
            <padding>
               <Insets right="20.0" />
            </padding>
         </Label>
         <PasswordField id="logInPasswordField" fx:id="enterPasswordField" />
      </children>
   </HBox>
   <HBox alignment="CENTER" prefHeight="38.0" prefWidth="324.0">
      <children>
         <Button id="logInButton" fx:id="enterLogInButton" mnemonicParsing="false" onAction="#onLogInButtonClick" text="Log In">
            <HBox.margin>
               <Insets right="20.0" />
            </HBox.margin>
         </Button>
         <Button id="logInClearButton" fx:id="enterClearButton" mnemonicParsing="false" onAction="#onClearButtonClick" text="Clear">
            <HBox.margin>
               <Insets right="20.0" />
            </HBox.margin>
         </Button>
         <Button id="logInNewUserButton" fx:id="enterNewUserButton" mnemonicParsing="false" onAction="#onNewUserButtonClick" text="New User" />
      </children>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
   </HBox>
   <Button fx:id="buttonHelp" mnemonicParsing="false" onAction="#onActionButtonHelp" text="Help" />
   <Label fx:id="enterErrorLabel" />
</VBox>
